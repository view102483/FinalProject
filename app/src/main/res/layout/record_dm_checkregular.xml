<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:background="#feffd6">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:divider="@drawable/shape"
        android:showDividers="end|none" >

        <TableRow style="@style/dmTableRow">
            <TextView
                android:layout_width="match_parent"
                android:text="日期："
                style="@style/dmTitle"/>
            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="20dp"
                style="@style/edittext"
                android:background="@drawable/edittextstyle"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:id="@+id/imagecalender"
                android:src="@drawable/calendar"
                android:stateListAnimator="@drawable/btn_selector"
                android:onClick="onBtnCalendarClick"/>
        </TableRow>

    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/change"
                    android:id="@+id/imageView_record_dm_submit"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:stateListAnimator="@drawable/btn_selector"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView_record_dm_change"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/submit"
                    android:stateListAnimator="@drawable/btn_selector"
                    android:onClick="onSubmit"/>


            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TableRow >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="      "
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="餐前"
                    android:textSize="15dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="餐後"
                    android:textSize="15dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="胰島素"
                    android:textSize="15dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="   血   "
                    android:textSize="15dp"
                    android:gravity="center"/>

            </TableRow>
                <TableRow >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="      "
                        android:textSize="15dp"
                        />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_weight="1"
                        android:text="血糖"
                        android:textSize="15dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_weight="1"
                        android:text="血糖"
                        android:textSize="15dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_weight="1"
                        android:text="劑量"
                        android:textSize="15dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_weight="1"
                        android:text="   壓   "
                        android:textSize="15dp"
                        android:gravity="center"/>

                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="早餐："
                        android:textSize="20dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/break_sugar_pre"
                        style="@style/edittext"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/break_sugar_post"
                        style="@style/edittext"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/break_insulin"
                        style="@style/edittext"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/break_press"
                        style="@style/edittext"/>
                </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="午餐："
                    android:textSize="20dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/launch_sugar_pre"
                    style="@style/edittext"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/launch_sugar_post"
                    style="@style/edittext"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/launch_insulin"
                    style="@style/edittext"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/launch_press"
                    style="@style/edittext"/>
            </TableRow>

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="晚餐："
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:id="@+id/dinner_sugar_pre"
                style="@style/edittext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:id="@+id/dinner_sugar_post"
                style="@style/edittext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:id="@+id/dinner_insulin"
                style="@style/edittext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:id="@+id/dinner_press"
                style="@style/edittext"/>
        </TableRow>
                <TableRow
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text=" "
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="血糖"
                        android:textSize="15dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="胰島素"
                        android:textSize="15dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="血壓"
                        android:textSize="15dp"
                        android:gravity="center"
                        />

                </TableRow>
                <TableRow
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="睡前："
                        android:textSize="20dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/sleep_sugar"
                        style="@style/edittext"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/sleep_insulin"
                        style="@style/edittext"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextstyle"
                        android:id="@+id/sleep_press"
                        style="@style/edittext"/>

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>