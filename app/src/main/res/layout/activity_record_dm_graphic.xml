<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_zone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/breakfastblue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:stateListAnimator="@drawable/btn_selector"
            android:id="@+id/imgBreakfast"
            android:onClick="btnTimeChange"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/lunchblue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:stateListAnimator="@drawable/btn_selector"
            android:id="@+id/imgLaunch"
            android:onClick="btnTimeChange"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dinnerblue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:stateListAnimator="@drawable/btn_selector"
            android:id="@+id/imgDinner"
            android:onClick="btnTimeChange"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/night"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:stateListAnimator="@drawable/btn_selector"
            android:id="@+id/imgBeforeSleep"
            android:onClick="btnTimeChange"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_zone"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/graphic"
            android:layout_below="@id/btn_zone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
